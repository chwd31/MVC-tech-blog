{{!-- Extend the main layout --}}
{{#extend "main"}}
  {{!-- Set the page title --}}
  {{#content "title"}}Dashboard{{/content}}

  {{!-- Page content --}}
  <h1>Dashboard</h1>

  {{!-- Check if there are posts to display --}}
  {{#if posts.length}}
    {{!-- Loop through each post and display its title and creation date --}}
    <ul>
      {{#each posts}}
        <li>
          <h2><a href="/post/{{id}}">{{title}}</a></h2>
          <p>{{createdAt}}</p>
          <p>
            <a href="/edit/{{id}}">Edit</a> | 
            <a href="/delete/{{id}}">Delete</a>
          </p>
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p>You haven't created any posts yet. <a href="/new">Create one now!</a></p>
  {{/if}}

  {{!-- Link to create a new post --}}
  <p><a href="/new">New post</a></p>
{{/extend}}
